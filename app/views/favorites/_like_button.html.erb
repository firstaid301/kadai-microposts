<% current_micropost = Micropost.find(micropost_id) %>
<% if current_user.favorites.find_by(micropost_id: micropost_id) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost_id), method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_id  %>
      <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost_id %>
      <%= f.submit 'favorite', class: 'btn btn-primary btn-sm' %>
    <% end %>
<% end %>